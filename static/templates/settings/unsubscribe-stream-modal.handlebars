<div id="unsubscribe_stream_modal" class="modal modal-bg hide fade" tabindex="-1" role="dialog" aria-labelledby="unsubscribe_stream_modal_label" aria-hidden="true">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="{{t 'Close' }}"><span aria-hidden="true">&times;</span></button>
        <h3 id="unsubscribe_stream_modal_label">{{t "Unsubscribe to" }} <span class="stream_name">#{{stream_name}}</span></h3>
    </div>
    <div class="modal-body">
        <p>{{t "You are the only user in this invite-only stream. The stream will be deactivated when you unsubscribe from this invite-only stream." }} <strong>{{t "Are you sure you want to do this?" }}</strong></p>
    </div>
    <div class="modal-footer">
        <button class="button rounded" data-dismiss="modal">{{t "Cancel" }}</button>
        <button class="button rounded btn-danger" id="do_unsubscribe_stream_button" data-stream="{{stream_name}}">{{t "Yes,unsubscribe" }}</button>
    </div>
</div>
